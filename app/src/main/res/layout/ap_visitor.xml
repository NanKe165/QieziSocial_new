<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_83"
    android:paddingLeft="@dimen/qb_px_15"
    android:paddingRight="@dimen/qb_px_15">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/ap_visitor_head"
        android:layout_width="@dimen/qb_px_56"
        android:layout_height="@dimen/qb_px_56"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/normal_head" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_visitor_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_70"
        android:textColor="@color/tv_black"
        android:textSize="16sp" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_visitor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/tv_gray3"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/ap_visitor_hint"
        android:visibility="gone"
        android:layout_width="@dimen/qb_px_7"
        android:layout_height="@dimen/qb_px_7"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/qb_px_15"
        android:background="@drawable/msg_hint" />
</FrameLayout>