<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ap_f_selectobj_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_70"
    android:background="@drawable/filter_objitem_bg3">

    <ImageView
        android:id="@+id/ap_f_selectobj_img"
        android:layout_width="@dimen/qb_px_70"
        android:layout_height="@dimen/qb_px_70"
        android:layout_gravity="right|bottom"
        android:src="@drawable/filter_obj_bg1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:orientation="vertical">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交朋友"
            android:textColor="@color/tv_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_64"
            android:layout_marginTop="@dimen/qb_px_6"
            android:text="想交好朋友"
            android:textColor="@color/tv_black"
            android:textSize="8sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_newmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10"
            android:text="26条新消息"
            android:textColor="@color/home_refresh_hint_color"
            android:textSize="8sp"
            android:visibility="gone" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:text="正在审核"
            android:textColor="@color/tv_black2"
            android:textSize="10sp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/ap_f_selectobj_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:visibility="gone">

            <com.eggplant.qiezisocial.widget.image.CircleImageView
                android:id="@+id/ap_f_selectobj_head"
                android:layout_width="@dimen/qb_px_10"
                android:layout_height="@dimen/qb_px_10"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/normal_head" />

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/ap_f_selectobj_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/qb_px_13"
                android:text="***"
                android:textSize="9sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自建场景"
            android:textColor="@color/tv_gray4"
            android:textSize="13sp"
            android:visibility="gone" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_f_selectobj_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_6"
            android:text="自建你喜欢的场景"
            android:textColor="@color/tv_gray2"
            android:textSize="8sp"
            android:visibility="gone" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_lock"
        android:layout_gravity="right"
        android:id="@+id/ap_f_selectobj_lock"
        android:visibility="gone"
        />
</FrameLayout>