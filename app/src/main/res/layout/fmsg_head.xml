<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_2"
        android:layout_marginBottom="@dimen/qb_px_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_nearby"
            android:drawablePadding="@dimen/qb_px_5"
            android:text="附近的人"
            android:textColor="@color/tv_black"
            android:textSize="14sp" />
        <ImageView
            android:padding="@dimen/qb_px_5"
            android:id="@+id/fmsg_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_refresh"
            android:layout_gravity="center_vertical|right"
            />
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fmsg_getloca_gp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_150">
        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_getloca"
            android:layout_marginTop="@dimen/qb_px_30"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/qb_px_25"
            android:paddingRight="@dimen/qb_px_25"
            android:layout_height="@dimen/qb_px_40"
            android:textColor="@color/tv_black"
            android:textSize="13sp"
            android:text="点击获取位置权限"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/icon_loca"
            android:drawablePadding="@dimen/qb_px_5"
            android:gravity="center"
            android:background="@drawable/tv_yellow_bg"
            />
        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="获取位置权限后才能查看附近的人哦"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/qb_px_80"
            android:textColor="@color/tv_gray2"
            />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/fmsg_view1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:paddingBottom="@dimen/qb_px_15"
        android:paddingTop="@dimen/qb_px_15">

        <com.eggplant.qiezisocial.widget.image.CircleImageView
            android:id="@+id/fmsg_head1"
            android:layout_width="@dimen/qb_px_50"
            android:layout_height="@dimen/qb_px_50"
            android:layout_centerVertical="true"
            android:src="@mipmap/normal_head" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_nick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_toRightOf="@id/fmsg_head1"
            android:text="lili"
            android:textColor="@color/tv_black2"
            android:textSize="13sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_birth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/fmsg_nick1"
            android:background="@drawable/role_bg1"
            android:paddingBottom="@dimen/qb_px_2"
            android:paddingLeft="@dimen/qb_px_10"
            android:paddingRight="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_2"
            android:text="25岁"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="10sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/fmsg_birth1"
            android:background="@drawable/role_bg2"
            android:paddingBottom="@dimen/qb_px_2"
            android:paddingLeft="@dimen/qb_px_10"
            android:paddingRight="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_2"
            android:text="美妆博主"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_loca1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="900m"
            android:textColor="@color/tv_gray3"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/fmsg_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/qb_px_78"
        android:background="@color/line_color6" />

    <RelativeLayout
        android:id="@+id/fmsg_view2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:paddingBottom="@dimen/qb_px_15"
        android:paddingTop="@dimen/qb_px_15">

        <com.eggplant.qiezisocial.widget.image.CircleImageView
            android:id="@+id/fmsg_head2"
            android:layout_width="@dimen/qb_px_50"
            android:layout_height="@dimen/qb_px_50"
            android:layout_centerVertical="true"
            android:src="@mipmap/normal_head" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_nick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_toRightOf="@id/fmsg_head2"
            android:text="lili"
            android:textColor="@color/tv_black2"
            android:textSize="13sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_birth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/fmsg_nick2"
            android:background="@drawable/role_bg3"
            android:paddingBottom="@dimen/qb_px_2"
            android:paddingLeft="@dimen/qb_px_10"
            android:paddingRight="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_2"
            android:text="25岁"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/fmsg_birth2"
            android:background="@drawable/role_bg4"
            android:paddingBottom="@dimen/qb_px_2"
            android:paddingLeft="@dimen/qb_px_10"
            android:paddingRight="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_2"
            android:text="美妆博主"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/fmsg_loca2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="900m"
            android:textColor="@color/tv_gray3"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/qb_px_78"
        android:background="@color/line_color6" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/fmsg_flist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_15"
        android:drawableLeft="@mipmap/icon_flist"
        android:drawablePadding="@dimen/qb_px_5"
        android:text="朋友列表"
        android:textColor="@color/tv_black"
        android:textSize="14sp"
        android:visibility="visible" />

</LinearLayout>