<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gz_dialog_bg"
    android:layout_height="wrap_content">
    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销账号"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/tv_black2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_18"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close_black"
        android:layout_gravity="right"
        android:padding="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:id="@+id/dlg_close_user_close"
        />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_black2"
        android:textSize="13sp"
        android:text="@string/close_user"
        android:layout_marginTop="@dimen/qb_px_60"
        android:lineSpacingExtra="2.5dp"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        />
    <LinearLayout
        android:layout_marginBottom="@dimen/qb_px_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_45"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_145"
        >
        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/dlg_close_user_cancle"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/tv_yellow_bg"
            android:textSize="14sp"
            android:textColor="@color/tv_black"
            android:textStyle="bold"
            />
        <FrameLayout
            android:layout_width="@dimen/qb_px_38"
            android:layout_height="wrap_content"/>
        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/dlg_close_user_sure"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:background="@drawable/tv_gray_bg"
            android:textSize="14sp"
            android:textColor="@color/tv_black"
            android:textStyle="bold"
            />

    </LinearLayout>

</FrameLayout>