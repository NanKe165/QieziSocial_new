<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_head_gp"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qb_px_80"
    android:layout_marginTop="@dimen/qb_px_30"
    android:orientation="horizontal"
    android:visibility="visible">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/video_img"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_20"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/video_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="正在等待接听..."
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>