<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/qb_px_35">

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ft_select_interest_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_5"
        android:padding="@dimen/qb_px_5"
        android:text="确定"
        android:textColor="@color/tv_black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ft_select_interest_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_5"
        android:padding="@dimen/qb_px_5"
        android:text="(0/4)"
        android:textColor="@color/tv_black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_35"
        android:background="@color/line_color2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_185"
        android:layout_marginTop="@dimen/qb_px_36"
        android:background="@color/login_ft_bg"
        android:scrollbars="none">

        <com.eggplant.qiezisocial.widget.WordView
            android:id="@+id/ft_select_interest_wordview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>


</FrameLayout>