<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_black"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/prep_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/qb_px_23"
        android:padding="@dimen/qb_px_5"
        android:src="@drawable/pre_del"

        />

    <android.support.v4.view.ViewPager
        android:id="@+id/prep_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/qb_px_87"
        android:layout_marginTop="@dimen/qb_px_77" />

    <TextView
        android:id="@+id/prep_sure"
        android:layout_width="@dimen/qb_px_70"
        android:layout_height="@dimen/qb_px_33"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/qb_px_15"
        android:background="@drawable/green_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:visibility="gone" />

    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:id="@+id/prep_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgColor="@color/translate"
        android:layout_marginTop="@dimen/qb_px_25"
        app:returnDrawable="@mipmap/close_white"
        app:tbTitleColor="@color/white"
        app:returnToright="true" />
</FrameLayout>