<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/ap_lchat_head"
        android:layout_width="@dimen/qb_px_27"
        android:layout_height="@dimen/qb_px_27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_17"
        android:src="@mipmap/normal_head" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_lchat_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_29"
        android:layout_marginTop="@dimen/qb_px_16"
        android:text=""
        android:textColor="@color/tv_black4"
        android:textSize="9sp" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_lchat_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_29"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_toLeftOf="@id/ap_lchat_head"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/tv_gray2"
        android:textSize="12sp" />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_lchat_hint"
        android:layout_marginTop="@dimen/qb_px_23"
        android:text=""
        android:layout_marginLeft="@dimen/qb_px_29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/tv_black4"
        />
</FrameLayout>