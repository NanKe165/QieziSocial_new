<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_func_gp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/qb_px_120">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/video_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_50"
            android:orientation="vertical"
            android:padding="@dimen/qb_px_2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/av_swap" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="切换摄像头"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/qb_px_50"
            android:orientation="vertical"
            android:padding="@dimen/qb_px_2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/av_mute" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="静音"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>
