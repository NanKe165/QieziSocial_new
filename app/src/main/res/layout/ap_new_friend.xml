<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_80"
    android:paddingLeft="@dimen/qb_px_15"
    android:paddingRight="@dimen/qb_px_15">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/ap_new_friend_head"
        android:layout_width="@dimen/qb_px_33"
        android:layout_height="@dimen/qb_px_33"
        android:layout_gravity="center_vertical"
        android:src="@color/color_orange" />

    <ImageView
        android:id="@+id/ap_new_friend_sex"
        android:layout_width="@dimen/qb_px_10"
        android:layout_height="@dimen/qb_px_10"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_22"
        android:layout_marginTop="@dimen/qb_px_10"
        android:src="@mipmap/sex_girl" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_new_friend_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginRight="@dimen/qb_px_100"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/tv_black"
        android:textSize="16sp" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:layout_marginTop="@dimen/qb_px_12"
        android:text="邀请您添加为好友"
        android:textColor="@color/tv_gray2"
        android:textSize="11sp" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:visibility="gone"
        android:id="@+id/ap_new_friend_agree"
        android:layout_width="@dimen/qb_px_53"
        android:layout_height="@dimen/qb_px_25"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/tv_yellow_bg"
        android:gravity="center"
        android:text="同意"
        android:textColor="@color/tv_black"
        android:textSize="12sp" />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:text="等待验证"
        android:textColor="@color/tv_black"
        android:textSize="12sp"
        />
</FrameLayout>