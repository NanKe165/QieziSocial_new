<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_head_gp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/qb_px_50"
    android:orientation="vertical">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/audio_img"
        android:layout_width="@dimen/qb_px_60"
        android:layout_height="@dimen/qb_px_60"
        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:id="@+id/audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_5"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/audio_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_3"
        android:text="语音来电"
        android:textColor="@color/white"
        android:textSize="10sp" />
</LinearLayout>
