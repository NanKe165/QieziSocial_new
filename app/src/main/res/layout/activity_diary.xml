<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    >

    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:id="@+id/diary_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        app:bgColor="@color/translate"
        app:rightTxtBg="@drawable/home_pub_bg"
        app:tbTitle="日志"
       />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/diary_ry"
        android:layout_marginTop="@dimen/qb_px_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.eggplant.qiezisocial.widget.flow.ExplosiveView
        android:visibility="visible"
        android:id="@+id/diary_animview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.eggplant.qiezisocial.widget.flow.ExplosiveView>
</FrameLayout>