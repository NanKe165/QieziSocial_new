<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:background="@drawable/pub_dialog_bg">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_20"
            android:text="筛选器"
            android:textColor="@color/tv_black2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dlg_filter_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_marginTop="@dimen/qb_px_15"
            android:padding="@dimen/qb_px_5"
            android:src="@mipmap/close_black" />


        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_88"
            android:text="选择人群"
            android:textColor="@color/tv_black2"
            android:textSize="16sp" />


        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_219"
            android:text="交友目的"
            android:textColor="@color/tv_black2"
            android:textSize="16sp" />

        <com.eggplant.qiezisocial.widget.CustomSeekbar
            android:id="@+id/dlg_filter_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_25"
            android:layout_marginRight="@dimen/qb_px_25"
            android:layout_marginTop="@dimen/qb_px_110" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dlg_filter_object_ry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_23"
            android:layout_marginRight="@dimen/qb_px_23"
            android:layout_marginTop="@dimen/qb_px_247"
            android:overScrollMode="never" />


        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/dlg_filter_sure"
            android:layout_width="@dimen/qb_px_166"
            android:layout_height="@dimen/qb_px_53"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/qb_px_21"
            android:layout_marginTop="@dimen/qb_px_409"
            android:background="@drawable/tv_yellow_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/tv_black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>