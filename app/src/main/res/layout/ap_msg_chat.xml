<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/qb_px_12"
    android:layout_marginRight="@dimen/qb_px_12"
    android:background="@drawable/home_item_bg"
    android:paddingLeft="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_10">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        app:civ_border_color="@color/tv_yellow"
        app:civ_border_width="@dimen/qb_px_1"
        android:id="@+id/ap_msg_head"
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="@dimen/qb_px_40"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_toRightOf="@id/ap_msg_head">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_msg_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_black"
            android:textStyle="bold"
            android:textSize="16sp" />


        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_msg_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ap_msg_nick"
            android:layout_marginTop="@dimen/qb_px_8"
            android:textColor="@color/tv_gray7"
            android:textSize="11sp" />
        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/tv_gray3"
            android:textSize="12sp" />
        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_below="@id/ap_msg_time"
            android:id="@+id/ap_msg_hint"
            android:layout_width="@dimen/qb_px_17"
            android:layout_height="@dimen/qb_px_17"
            android:background="@drawable/msg_hint"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>