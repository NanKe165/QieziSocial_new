<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qb_px_6"
    android:layout_marginLeft="@dimen/qb_px_6"
    android:layout_marginRight="@dimen/qb_px_6"
    android:padding="@dimen/qb_px_6"
    android:background="@mipmap/ap_topic_bg">
    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_ptopic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_28"
        android:layout_marginLeft="@dimen/qb_px_18"
        android:textSize="@dimen/qb_px_15"
        android:textColor="@color/tv_black"
        android:layout_marginRight="@dimen/qb_px_18"
        android:maxLines="2"
        android:text=""
        />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_ptopic_usercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_usercount"
        android:drawablePadding="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_80"
        android:layout_marginLeft="@dimen/qb_px_18"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/tv_gray8"
        />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_ptopic_topiccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_topiccount"
        android:drawablePadding="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_80"
        android:layout_marginLeft="@dimen/qb_px_78"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/tv_gray8"
        />
    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ap_ptopic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_80"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/qb_px_18"
        android:textColor="@color/tv_gray4"
        android:text=""
        android:textSize="10sp"
        />
</FrameLayout>