<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:id="@+id/vcr_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTxtBg="@drawable/tv_yellow_pub"
        app:tbRightTxt="发布"
        app:tbTitle="丑照" />

    <View
        android:layout_marginTop="@dimen/qb_px_47"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/qb_px_48"
        android:id="@+id/vcr_ry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.eggplant.qiezisocial.widget.flow.ExplosiveView
        android:visibility="visible"
        android:id="@+id/vcr_animview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>