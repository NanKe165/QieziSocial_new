<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:id="@+id/pgroup_bar"
        app:bgColor="@color/translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_90"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_marginTop="@dimen/qb_px_65"
            android:background="@drawable/pub_dialog_bg">

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/pgroup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_18"
                android:layout_marginRight="@dimen/qb_px_18"
                android:layout_marginTop="@dimen/qb_px_13"
                android:maxLines="2"
                android:textColor="@color/tv_black"
                android:textSize="15sp" />

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/pgroup_usercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/qb_px_11"
                android:layout_marginLeft="@dimen/qb_px_18"
                android:layout_marginRight="@dimen/qb_px_15"
                android:drawableLeft="@mipmap/icon_usercount"
                android:drawablePadding="@dimen/qb_px_3"
                android:gravity="center"
                android:text=""
                android:textColor="@color/tv_gray8"
                android:textSize="12sp" />

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/pgroup_topiccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/qb_px_11"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_toRightOf="@id/pgroup_usercount"
                android:drawableLeft="@mipmap/icon_topiccount"
                android:drawablePadding="@dimen/qb_px_3"
                android:gravity="center"
                android:text=""
                android:textColor="@color/tv_gray8"
                android:textSize="12sp" />


        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/qb_px_155"
        android:id="@+id/pgroup_ry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>