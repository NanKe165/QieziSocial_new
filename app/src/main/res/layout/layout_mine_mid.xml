            android:layout_weight="1" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/setinfo_insterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_10"
            android:maxLines="2"
            android:maxWidth="@dimen/qb_px_240"
            android:text=""
            android:textColor="@color/tv_black3"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sp_icon" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color2" />

    <LinearLayout
        android:id="@+id/setinfo_object_gp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交友目的"
            android:textColor="@color/tv_black3"
            android:textSize="13sp" />

