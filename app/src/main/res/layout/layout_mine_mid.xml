            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/setinfo_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_10"
            android:maxLines="2"
            android:maxWidth="@dimen/qb_px_240"
            android:text=""
            android:textColor="@color/tv_black3"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sp_icon" />
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line_color2" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:orientation="horizontal">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/sp_album_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_23"
            android:text="相册"
            android:textColor="@color/tv_black3"
            android:textSize="13sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/setinfo_album_ry"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_75"
            android:layout_marginBottom="@dimen/qb_px_10"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_10" />

    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/setinfo_add_pic"
        android:layout_marginRight="@dimen/qb_px_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/setinfo_add_pic"
        android:layout_gravity="right"
        />

</LinearLayout>