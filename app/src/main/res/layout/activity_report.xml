<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:fitsSystemWindows="true">

    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:id="@+id/report_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbTitle="投诉" />

    <com.eggplant.qiezisocial.widget.QzEdittext
        android:id="@+id/report_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_150"
        android:layout_marginTop="@dimen/qb_px_50"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入投诉内容"
        android:paddingBottom="@dimen/qb_px_15"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:textColor="@color/tv_black2"
        android:textColorHint="@color/tv_gray"
        android:textSize="14sp" />


    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/report_sure"
        android:layout_width="@dimen/qb_px_150"
        android:layout_height="@dimen/qb_px_40"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/qb_px_100"
        android:background="@drawable/tv_gray_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/tv_black2"
        android:textSize="15sp"

        />
</FrameLayout>