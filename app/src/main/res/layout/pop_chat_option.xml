<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/pop_chat_option_add"
        android:layout_width="@dimen/qb_px_90"
        android:layout_height="@dimen/qb_px_30">
        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="@dimen/qb_px_90"
            android:layout_height="@dimen/qb_px_30"
            android:textColor="@color/tv_black2"
            android:textSize="13sp"
            android:gravity="center"
            android:text="加好友" />
        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color3"
            />
    </FrameLayout>

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/pop_chat_option_reort"
        android:layout_width="@dimen/qb_px_90"
        android:layout_height="@dimen/qb_px_30"
        android:textColor="@color/tv_black2"
        android:textSize="13sp"
        android:gravity="center"
        android:text="投诉" />
</LinearLayout>