<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/pub2_decorate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_52"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />
    <FrameLayout
        android:id="@+id/pub2_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translate_black2"
        android:alpha="1"
        android:visibility="visible" />
    <FrameLayout
        android:id="@+id/pub2_decorate_gp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/pub2_pubgp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_15"
            android:background="@drawable/home_pub_bg"
            android:visibility="visible">
            <com.eggplant.qiezisocial.widget.QzEdittext
                android:visibility="visible"
                android:id="@+id/pub2_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/qb_px_12"
                android:layout_marginRight="@dimen/qb_px_50"
                android:hint="想聊点啥？"
                android:textColor="@color/tv_black4"
                android:imeOptions="actionSend"
                android:inputType="textImeMultiLine"
                android:background="@null"
                android:maxLength="80"
                android:maxLines="1"
                android:textSize="11sp"
                android:textColorHint="@color/tv_gray4"
                />
            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/pub2_topictxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/qb_px_24"
                android:layout_marginRight="@dimen/qb_px_80"
                android:text="想聊点啥？"
                android:textColor="@color/tv_gray4"
                android:textSize="11sp"

                android:visibility="gone" />


            <ImageView
                android:id="@+id/pub2_nextfont"
                android:padding="@dimen/qb_px_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/qb_px_12"
              />

        </FrameLayout>
        <ImageView
            android:id="@+id/pub2_decorate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qb_px_40"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />
    </FrameLayout>


    <com.eggplant.qiezisocial.widget.keyboard.EmojiKeyBoard
        android:id="@+id/pub2_txt_emojikeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.eggplant.qiezisocial.widget.keyboard.EmojiKeyBoard>
</FrameLayout>