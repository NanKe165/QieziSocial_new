<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@color/homebg7">

    <com.eggplant.qiezisocial.widget.flow.EmojiFlowView
        android:id="@+id/pub_txt_emojiview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout
        android:id="@+id/pub_txt_ft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.eggplant.qiezisocial.widget.topbar.Topbar
        android:visibility="visible"
        android:id="@+id/pub_txt_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_33"
        app:returnToright="true"
        app:returnDrawable="@mipmap/close_black2"
        app:bgColor="@color/translate" />
</RelativeLayout>