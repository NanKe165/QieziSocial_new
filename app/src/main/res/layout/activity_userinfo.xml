<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.eggplant.qiezisocial.widget.topbar.Topbar
        app:bgColor="@color/translate"
        android:id="@+id/userinfor_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tbTitle="详情" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_45"
        android:paddingBottom="@dimen/qb_px_22">

        <com.eggplant.qiezisocial.widget.image.CircleImageView
            android:id="@+id/userinfor_head"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="@dimen/qb_px_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_40"
            android:src="@mipmap/normal_head"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <ImageView
            android:id="@+id/userinfor_sex"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"
            android:layout_alignBottom="@id/userinfor_head"
            android:layout_alignRight="@id/userinfor_head"
            android:layout_margin="@dimen/qb_px_5" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/userinfor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfor_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_10"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/tv_black2"
            android:textSize="23sp"
            android:textStyle="bold" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/userinfor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfor_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:drawableLeft="@mipmap/id_left_icon"
            android:drawablePadding="@dimen/qb_px_3"
            android:text="asdfasdf"
            android:textColor="@color/tv_black"
            android:textSize="15sp"
            android:visibility="gone" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/userinfor_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfor_id"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/tv_gray2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfor_sign"
            android:layout_marginTop="@dimen/qb_px_10"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_15">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_other_sp_birth"
                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="年龄"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:id="@+id/userinfor_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/tv_black2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_other_sp_career"
                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="职业"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:id="@+id/userinfor_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/tv_black2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_other_sp_edu"
                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="学历"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:id="@+id/userinfor_edu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/tv_black2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_other_sp_height"
                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="身高体重"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:id="@+id/userinfor_wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/tv_black2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_otehr_sp_insterest"
                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="兴趣爱好"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:id="@+id/userinfor_inster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/qb_px_100"
                    android:text=""
                    android:textColor="@color/tv_black2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/userinfor_photo_gp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.eggplant.qiezisocial.widget.QzTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:drawableLeft="@mipmap/icon_other_sp_photo"

                    android:drawablePadding="@dimen/qb_px_5"
                    android:gravity="bottom"
                    android:text="相册"
                    android:textColor="@color/tv_gray4"
                    android:textSize="13sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/userinfor_ry"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_75"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/qb_px_100"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:visibility="visible" />
            </RelativeLayout>

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/userinfor_chat"
                android:layout_width="@dimen/qb_px_133"
                android:layout_height="@dimen/qb_px_53"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/qb_px_50"
                android:background="@drawable/tv_yellow_bg"
                android:gravity="center"
                android:text="打招呼"
                android:textColor="@color/tv_black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>