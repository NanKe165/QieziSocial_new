<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_212"
        android:background="@drawable/dialog_setting_bg">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/qb_px_15"
            android:text="评论"
            android:textColor="@color/tv_black2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/comment_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_10"
            android:padding="@dimen/qb_px_5"
            android:src="@mipmap/close_black" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_15"
            android:id="@+id/comment_ry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/qb_px_45" />
    </FrameLayout>
    <com.eggplant.qiezisocial.widget.keyboard.SendEmojiKeyBoard
        android:id="@+id/comment_keyboard"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>