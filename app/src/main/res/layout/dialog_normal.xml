<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_162"
    android:layout_marginLeft="@dimen/qb_px_30"
    android:layout_marginRight="@dimen/qb_px_30"
    android:background="@drawable/gz_dialog_bg"
    android:orientation="vertical">

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/dlg_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_13"
        android:text="删除好友"
        android:textColor="@color/tv_black2"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/dlg_normal_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_80"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_15"
        android:gravity="center"
        android:text="删除后将清空该聊天的消息记录"
        android:textColor="@color/tv_black2"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_dialog_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/dlg_normal_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tv_black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_dialog_color" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/dlg_normal_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/tv_black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>