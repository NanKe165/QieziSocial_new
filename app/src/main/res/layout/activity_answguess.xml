<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_29"
        android:src="@mipmap/answ_guess_top" />

    <ImageView
        android:id="@+id/answguess_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_32"
        android:padding="@dimen/qb_px_5"
        android:src="@mipmap/close_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qb_px_90"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answguess_ry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/answguess_aw_gp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/answ_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_60"
            android:paddingRight="@dimen/qb_px_60"
            android:visibility="visible">

            <com.eggplant.qiezisocial.widget.QzTextView
                android:clickable="false"
                android:id="@+id/answguess_aw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/answer_unselect"
                android:drawablePadding="@dimen/qb_px_5"
                android:maxLines="2"
                android:paddingBottom="@dimen/qb_px_8"
                android:paddingTop="@dimen/qb_px_8"
                android:text=""
                android:textColor="@color/tv_black2"
                android:textSize="15sp" />

            <com.eggplant.qiezisocial.widget.QzTextView
                android:clickable="false"
                android:id="@+id/answguess_aw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/answer_unselect"
                android:drawablePadding="@dimen/qb_px_5"
                android:maxLines="2"
                android:paddingBottom="@dimen/qb_px_8"
                android:paddingTop="@dimen/qb_px_8"
                android:text=""
                android:textColor="@color/tv_black2"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answguess_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/qb_px_30"
            android:paddingLeft="@dimen/qb_px_28"
            android:paddingRight="@dimen/qb_px_28"
            android:paddingTop="@dimen/qb_px_30"
            android:visibility="gone">

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/answguess_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_53"
                android:layout_weight="1"
                android:background="@drawable/tv_yellow_bg2"
                android:gravity="center"
                android:text="继续答题"
                android:textColor="@color/tv_black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/answguess_chattag"
                android:layout_width="@dimen/qb_px_36"
                android:layout_height="@dimen/qb_px_1" />

            <com.eggplant.qiezisocial.widget.QzTextView
                android:id="@+id/answguess_chat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_53"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/tv_yellow_bg2"
                android:gravity="center"
                android:text="聊天"
                android:textColor="@color/tv_black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/answguess_continue2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_53"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginRight="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_30"
            android:background="@drawable/tv_yellow_bg2"
            android:gravity="center"
            android:text="继续答题"
            android:textColor="@color/tv_black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>