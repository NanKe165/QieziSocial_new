<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_60">

    <com.eggplant.qiezisocial.widget.image.CircleImageView
        android:id="@+id/bar_mine_img"
        android:layout_width="@dimen/qb_px_37"
        android:layout_height="@dimen/qb_px_37"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:layout_marginTop="@dimen/qb_px_15"
        android:src="@mipmap/normal_head"
        android:visibility="gone" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/bar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_toRightOf="@id/bar_mine_img"
        android:drawableLeft="@mipmap/main_bar_home"
        android:drawablePadding="@dimen/qb_px_5"
        android:gravity="center"
        android:textColor="@color/tv_black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_toRightOf="@id/bar_title_tv"
        android:background="@drawable/main_bar_func_bg"
        android:drawablePadding="@dimen/qb_px_5"
        android:drawableRight="@mipmap/main_bar_func_right"
        android:paddingBottom="@dimen/qb_px_10"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_10"
        android:paddingTop="@dimen/qb_px_10"
        android:text=""
        android:textColor="@color/tv_black"
        android:textSize="11sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_toRightOf="@id/bar_title_tv">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/bar_title_func"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_bar_func_bg"
            android:drawablePadding="@dimen/qb_px_5"
            android:drawableRight="@mipmap/main_bar_func_right"
            android:paddingBottom="@dimen/qb_px_10"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_10"
            android:maxLength="9"
            android:paddingTop="@dimen/qb_px_10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="11sp" />

        <FrameLayout
            android:visibility="invisible"
            android:id="@+id/bar_left_hint"
            android:layout_width="@dimen/qb_px_5"
            android:layout_height="@dimen/qb_px_5"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/qb_px_8"
            android:layout_marginRight="@dimen/qb_px_8"
            android:background="@drawable/msg_hint" />
    </FrameLayout>

    <ImageView
        android:id="@+id/bar_clickme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_11"
        android:layout_marginTop="@dimen/qb_px_2"
        android:src="@mipmap/icon_clickme"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bar_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_20"
        android:padding="@dimen/qb_px_5"
        android:src="@mipmap/main_bar_setting"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bar_setinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_toRightOf="@id/bar_setting"
        android:padding="@dimen/qb_px_5"
        android:src="@mipmap/main_bar_setinfo"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_6"
            android:background="@drawable/mian_bar_bg"
            android:padding="@dimen/qb_px_7"
            android:src="@mipmap/main_home_black_icon" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_6">

            <ImageView
                android:id="@+id/bar_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/qb_px_7"
                android:background="@drawable/mian_bar_normal_bg"
                android:src="@mipmap/main_msg_white_icon" />

            <FrameLayout
                android:id="@+id/bar_msg_dot"
                android:layout_width="@dimen/qb_px_8"
                android:layout_height="@dimen/qb_px_8"
                android:layout_gravity="right"
                android:layout_margin="@dimen/qb_px_6"
                android:background="@drawable/msg_hint"
                android:visibility="gone" />
        </FrameLayout>


        <ImageView
            android:id="@+id/bar_friendlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_6"
            android:padding="@dimen/qb_px_7"
            android:src="@mipmap/main_extend_white_icon"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/bar_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mian_bar_normal_bg"
                android:padding="@dimen/qb_px_7"
                android:src="@mipmap/main_mine_white_icon" />

            <FrameLayout
                android:id="@+id/bar_apply_dot"
                android:layout_width="@dimen/qb_px_8"
                android:layout_height="@dimen/qb_px_8"
                android:layout_gravity="right"
                android:layout_margin="@dimen/qb_px_6"
                android:background="@drawable/msg_hint"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bar_indicator"
        android:layout_width="@dimen/qb_px_10"
        android:layout_height="@dimen/qb_px_3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/qb_px_140"
        android:layout_marginTop="@dimen/qb_px_48"
        android:background="@drawable/main_indicator"
        android:visibility="gone">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bar_msg_hint_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/qb_px_98"
        android:visibility="gone">

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/bar_msg_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/new_msg_hint"
            android:gravity="center_horizontal"
            android:maxLength="2"
            android:paddingTop="@dimen/qb_px_1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </FrameLayout>

</RelativeLayout>