<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/qb_px_180"
        android:layout_height="@dimen/qb_px_180"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/qb_px_190">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/pub_success_img" />

        <ImageView
            android:id="@+id/ft_pub_success_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pub_success_load"
            android:visibility="gone" />

        <com.eggplant.qiezisocial.widget.progress.CircularProgressView
            android:id="@+id/ft_pub_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:backColor="@color/transparent"
            app:backWidth="@dimen/qb_px_15"
            app:progColor="@color/tv_yellow"
            app:progWidth="@dimen/qb_px_15"
            app:progStartColor="@color/translate_yellow"
            app:progFirstColor="@color/tv_yellow"
            />
    </FrameLayout>

    <com.eggplant.qiezisocial.widget.QzTextView
        android:id="@+id/ft_pub_hintv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_20"
        android:text="正在发布..."
        android:textColor="@color/tv_black2"
        android:textSize="@dimen/qb_px_17" />

    <com.eggplant.qiezisocial.widget.QzTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_15"
        android:text=""
        android:textColor="@color/tv_black2"
        android:textSize="@dimen/qb_px_17" />
</LinearLayout>