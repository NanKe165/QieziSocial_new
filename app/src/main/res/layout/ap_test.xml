<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.eggplant.qiezisocial.widget.BubbleLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_4"
        app:radius="@dimen/qb_px_1"
        app:shadow_color="@color/translate_black2"
        app:shadow_size="@dimen/qb_px_4"
        app:triangle_visiable="false">



    </com.eggplant.qiezisocial.widget.BubbleLayout>
    <LinearLayout
        android:background="@drawable/card_bg"
        android:id="@+id/map_window_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/qb_px_1"
        android:orientation="horizontal">

        <com.eggplant.qiezisocial.widget.image.CircleImageView
            android:id="@+id/ap_test_head"
            android:layout_width="@dimen/qb_px_40"
            android:layout_height="@dimen/qb_px_40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:src="@mipmap/normal_head" />

        <com.eggplant.qiezisocial.widget.QzTextView
            android:id="@+id/ap_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/qb_px_5"
            android:maxLines="4"
            android:maxWidth="@dimen/qb_px_300"
            android:paddingBottom="@dimen/qb_px_10"
            android:paddingLeft="@dimen/qb_px_10"
            android:paddingRight="@dimen/qb_px_10"
            android:paddingTop="@dimen/qb_px_10"
            android:text="11123"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>